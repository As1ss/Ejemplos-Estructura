<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="1"
    android:shrinkColumns="2"
    >

    <TableRow android:background="@color/blue_dark">
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="Artículo"
            android:textColor="@color/white"/>
        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="Precio"

            android:textColor="@color/white"/>

    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="2Kg de Naranjas"
            />
        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="1,50€"/>

    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="3 Tortillas de Patatas"
            />
        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="6,84€"/>

    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="5 Shushi"
            />
        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="15,00€"/>

    </TableRow>
    <TableRow>
        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="1 Cepillo de dientes"
            />
        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="2,70€"/>

    </TableRow>
    <View
        android:layout_height="2dp"
        android:background="@color/gray"/>
    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Subtotal"
            android:textColor="@color/blue_dark"
            />
        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="26,04€"
            android:textAlignment="textEnd"
            />


    </TableRow>
    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Cupón de Descuento 15%"
            android:textColor="@color/blue_dark"
            />
        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="-3,91€"
            android:textAlignment="textEnd"
            />


    </TableRow>
    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Costes de envío"
            android:textColor="@color/blue_dark"
            />
        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="3,00€"
            android:textAlignment="textEnd"
            />


    </TableRow>
    <TableRow>

        <TextView
            android:background="@color/blue_dark"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Total"
            android:textColor="@color/white"
            />
        <TextView
            android:background="@color/blue_dark"
            android:textColor="@color/white"
            android:layout_column="1"
            android:padding="5dp"
            android:text="25,13€"
            android:textAlignment="textEnd"
            />


    </TableRow>






</TableLayout>